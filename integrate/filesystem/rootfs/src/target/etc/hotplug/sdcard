#!/bin/sh

MNT_TARGET=mmcblk0

if [ $ACTION = "add" ]; then
	mkdir -p /media/mmcblk0

	#mount /dev/$MDEV /media/mmcblk0
	#if [ $? -ne 0 ]; then
	#	rmdir /media/mmcblk0
	#fi

	P=`ls /dev/mmcblk*p*`
	if [ "$P" != "" ]; then
		case $MDEV in
			"mmcblk0p1" | "mmcblk1p1" | "mmcblk2p1" | "mmcblk3p1" | "mmcblk4p1" | "mmcblk5p1" | "mmcblk6p1" | "mmcblk7p1" | "mmcblk8p1" | "mmcblk9p1")
				umount /media/$MNT_TARGET
				mount /dev/$MDEV /media/$MNT_TARGET
				if [ $? -ne 0 ]; then
					rmdir /media/$MNT_TARGET
				fi
			;;
			"mmcblk0p2")
				#mount /dev/mmcblk0p2 /media/mmcblk0
				#if [ $? -ne 0 ]; then
				#	rmdir /media/mmcblk0
				#fi
			;;
			*)
				exit 1
			;;
		esac
	else
		mount /dev/mmcblk0 /media/$MNT_TARGET
		if [ $? -ne 0 ]; then
			rmdir /media/$MNT_TARGET
		fi
	fi
else
	umount -l /dev/$MDEV
	rmdir /media/$MNT_TARGET
fi

