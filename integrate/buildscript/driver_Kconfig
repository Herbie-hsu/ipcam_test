menu "Sonix Driver"

config MODULE_USB_WIFI_SUPPORT
    bool "USB WiFi Support"
    default y
	help

choice
	prompt "USB WiFi Drivers" if MODULE_USB_WIFI_SUPPORT
	default MODULE_USB_WIFI_RTL8188EUS_4_3_0_3_10997
 
